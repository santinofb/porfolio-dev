---
import SectionContainer from "../components/SectionContainer.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import UserIcon from "../icons/User.astro";
import LinkButton from "../components/LinkButton.astro";
import PreviewIcon from "../icons/Preview.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import CodeIcon from "../icons/Code.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>
            Componentes de Santino Fabi - Desarrollador y Programador Web
        </title>
    </head>

    <body class="relative">
        <div
            class="dark:absolute dark:top-0 dark:z-[-2] dark:h-screen dark:w-screen dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]
			absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] transition"
        >
        </div>
        <main>
            <SectionContainer class="pt-24">
                <h1
                    class="text-5xl font-semibold text-gray-800 dark:text-white flex flex-row items-center gap-x-4 mb-6 transition"
                >
                    <CodeIcon class="size-12" stroke-width="2" />Components List
                </h1>
            </SectionContainer>

            <SectionContainer class="py-16 flex flex-col gap-y-12">
                <article class="flex flex-row gap-x-4 items-center">
                    <h2
                        class="text-2xl font-medium text-gray-800 dark:text-white transition"
                    >
                        &lt;Badge /&gt;
                    </h2>
                    <Badge>Badge</Badge>
                </article>
                <article class="flex flex-row gap-x-4 items-center">
                    <h2
                        class="text-2xl font-medium text-gray-800 dark:text-white transition"
                    >
                        &lt;SocialPill /&gt;
                    </h2>
                    <div class="cursor-pointer">
                        <SocialPill>
                            <UserIcon class="size-5" />SocialPill
                        </SocialPill>
                    </div>
                </article>
                <article class="flex flex-row gap-x-4 items-center">
                    <h2
                        class="text-2xl font-medium text-gray-800 dark:text-white transition"
                    >
                        &lt;LinkButton /&gt;
                    </h2>
                    <div class="cursor-pointer">
                        <LinkButton>
                            <PreviewIcon class="size-4" />LinkButton
                        </LinkButton>
                    </div>
                </article>
                <article class="flex flex-row gap-x-4 items-center">
                    <h2
                        class="text-2xl font-medium text-gray-800 dark:text-white"
                    >
                        &lt;ThemeToggle /&gt;
                    </h2>
                    <div class="z-10 text-gray-800 dark:text-gray-100">
                        <ThemeToggle />
                    </div>
                </article>
            </SectionContainer>
        </main>
        <Footer />
    </body>
</html>
