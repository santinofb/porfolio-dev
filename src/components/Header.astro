---
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="fixed top-0 z-10 flex justify-center mt-5 w-full mx-auto transition">
    <div class="fondo rounded-full">
        <div class="flex justify-between items-center w-[1120px] pr-2">
            <a
                href="https://avatars.githubusercontent.com/u/111947705?v=4"
                target="_blank"
                rel="noopener noreferrer"
            >
                <img
                    class="size-12 rounded-full shadow-lg"
                    src="https://avatars.githubusercontent.com/u/111947705?v=4"
                    alt="Santino Fabi photo"
                />
            </a>

            <nav
                class="flex flex-row gap-x-5 opacity-80 items-center font-medium text-gray-800 dark:text-gray-100"
            >
                <a class="anchors" href="/">Inicio</a>
                <a class="anchors" href="#proyectos">Proyectos</a>
                <a class="anchors" href="#sobremi">Sobre m√≠</a>
                <a class="anchors" href="mailto:santinofabi98@gmail.com"
                    >Contacto</a
                >
                <ThemeToggle />
            </nav>
        </div>
    </div>
</header>

<style>
    .fondo {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    @keyframes nav-shadown {
        to {
            @apply shadow-lg backdrop-blur bg-black/5 dark:bg-black/20;
        }
    }
</style>